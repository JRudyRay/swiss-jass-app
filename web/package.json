{
  "name": "swiss-jass-web",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://JRudyRay.github.io/swiss-jass-app",
  "scripts": {
    "dev": "vite",
  "sim": "ts-node scripts/simulate.ts",
  "build-smoke-unit": "npx esbuild scripts/unit_tests.ts --bundle --platform=node --format=cjs --outfile=dist_scripts/unit_tests.bundle.cjs --sourcemap",
  "build-smoke-sim": "npx esbuild scripts/simulate.ts --bundle --platform=node --format=cjs --outfile=dist_scripts/simulate.bundle.cjs --sourcemap",
  "build-smoke": "npm run build-smoke-unit && npm run build-smoke-sim",
  "smoke": "npm run build-smoke && node dist_scripts/unit_tests.bundle.cjs && node dist_scripts/simulate.bundle.cjs",
  "build": "vite build",
  "preview": "vite preview",
  "deploy": "npx gh-pages -d dist"
  },
  "dependencies": {
  "react": "^18.2.0",
  "react-dom": "^18.2.0",
  "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "esbuild": "^0.25.9",
    "gh-pages": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^7.1.5"
  }
}
